<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>

        <item name="windowNoTitle">true</item>


    </style>
    
    <style name="SettingsButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="CalculusButton" parent="">
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomImageButton" parent="">
        <item name="elevation">20dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

</resources>
